# populate-taxonomy

if [ -d "${extrasBase}" ]
then
  cd "${extrasBase}"

  rchive -gzip -db "$dbase" -input "taxoninfo.xml" \
    -archive "${archiveBase}" "${indexBase}" "${invertBase}" \
    -index TaxID -pattern "TaxonInfo" < /dev/null
fi
